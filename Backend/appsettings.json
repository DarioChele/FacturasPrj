{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": { 
    "MinimumLevel": "Information", 
    "WriteTo": [ 
      { 
        "Name": "Console", 
        "Args": { 
            "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} [CorrelationId:{CorrelationId}]{NewLine}{Exception}" 
          } 
      }, 
      { 
        "Name": "File", 
        "Args": { 
          "path": "Database/logs.txt", 
          "rollingInterval": "Day", 
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} [CorrelationId:{CorrelationId}]{NewLine}{Exception}" 
        } 
      } 
  ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "CorrelationIdOptions": {
    "AddToLoggingScope": true,
    "RequestHeader": "X-Correlation-Id",
    "ResponseHeader": "X-Correlation-Id", 
    "UpdateTraceIdentifier": true,
    "IncludeInResponse" : true
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "Esta_Es_Una_Llave_Super_Secreta_De_Mas_De_32_Caracteres_2026",
    "Issuer": "FacturaBackend",
    "Audience": "FacturaAngular"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=Database/facturacion.db"
  }
}
